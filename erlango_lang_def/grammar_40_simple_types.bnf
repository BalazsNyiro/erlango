<atom> ::= <atomInQuotes> | <atomSmallFirstChar>
<atomSmallFirstChar> ::= <letterSmall> <atomSmallFirstChar_tail>
<atomSmallFirstChar_tail> ::= <atomSmallFirstChar_tail> <atomPossibleCharAfterFirstPosition>
                            | <empty>
<atomPossibleCharAfterFirstPosition> ::= <letter>
                                      | <digit>
                                      | "_" | "@"


# TODO: what about escaped single quotes in qouted atoms?
<atomInQuotes> ::= "'" <atomCharList_inQuotes> "'"

# left recursion is important for LARK (<atomCharList_inQuotes> is on the left side of the expression)
<atomCharList_inQuotes> ::= <atomCharList_inQuotes> <anyUnicodeCharsExceptSingleQuote>
                          | <empty>





# LOCAL SYMBOLS to generate possible usecases, DON'T MERGE THEM - use short, simple definitions ##########
# these are defined with their real terminating symbols in other bnf files, these short defs are used for validations.

<anyUnicodeCharsExceptSingleQuote> ::=  "k" | "l" | "\t"
<anyUnicodeCharExceptDoubleQuote> ::= "o" | "p"
<anyUnicodeChar> ::= "m" | "n"

<digit>  ::= "1" | "2"
<empty>  ::= ""
<letter> ::= "t" | "m"
<letterSmall> ::= "e" | "f"

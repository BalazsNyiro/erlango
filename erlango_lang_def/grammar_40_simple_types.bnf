<pid> ::= "<" <integer> "." <integer> "." <integer> ">"


<number> ::= <integer> | <float>
<integer> ::= <numberTail> <digit>
<float> ::= <integer>  "." <integer>

<numberTail> ::= <numberTail> <digit>
               | <empty>


# <string> ::= <stringQuoteOne> | <stringQuoteTriple>
<string> ::= <stringQuoteOne>
<stringQuoteOne> ::= "\"" <stringQuoteOneTail> "\""


# TODO: it's a good question, what can be accepted after an escape char.
#####             backSlash+quote
<stringQuoteOneTail> ::= "\\" <anyUnicodeChar> | <anyUnicodeCharExceptDoubleQuote> <stringQuoteOneTail> | <empty>


